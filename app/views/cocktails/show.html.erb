<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>🍹Cocktail's Detail🍹</h1>
      <div class="name">
        <%= @cocktail.name %>
        <ul>
          <h6><% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %> of <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete do %>
             <i class="fa fa-minus-circle" aria-hidden="true"></i>
            <% end %>
          </li>
          <% end %>
          </h6>
        </ul>
        <h4>Add a new ingredient</h4>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.error_notification %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.submit  %>
        <% end %>
        <div class="doses_plus">
          <%= link_to new_cocktail_dose_path(@cocktail) do %>
            <i class="fa fa-plus-circle" aria-hidden="true"></i>
          <% end %>
          </br></br></br>
          <%= link_to 'Back to list', cocktails_path %>
        </div>
      </div>
    </div>
  </div>
</div>
