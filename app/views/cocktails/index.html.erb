        <h1>MISTER COCKTAIL</h1>
      </div>
    </div>
<div class="container">
  <div class="row">
    <h1>🍹🍹🍹Cocktails Menu🍹🍹🍹</h1>
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
            <ul>
              <%= link_to cocktail_path(cocktail) do %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://static.pexels.com/photos/109275/pexels-photo-109275.jpeg');">
                <li>
                <span class="card-category">
                  <%= cocktail.name %>
                </span>
                </li>
              </div>
              <% end %>
            </ul>
          </div>
      <% end %>
      <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-warning" %>
  </div>
</div>

