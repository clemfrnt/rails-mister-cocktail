<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h1>Add a new Cocktail🍹🍹</h1>
      <%= simple_form_for [@new_cocktail] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :attachinary %>
        <%= f.submit 'Share it !' %>
      <% end %>
    </div>
  </div>
</div>
